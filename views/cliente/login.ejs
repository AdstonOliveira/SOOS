<!DOCTYPE html>
<html lang="pt-br">
<%- include('../includes/head.ejs') %>
<body>
    <%- include('../includes/menu.ejs') %>
    <section class="d-flex flex-column align-items-center text-center">
        <div class="row pt-5 col-12 justify-content-center">
            <div class="col-4">
            <div class="card">
                    <% if (typeof message !== 'undefined') {  %>
                        <p>
                          <label style="color:Red"><%= message %></label>
                        </p>
                      <%}%>
                <h3 class=" d-flex justify-content-center card-header bg-dark" style="color: white">Login</h3>
                <div class="card-body">

                    <form action="/cliente/login" method="POST" id="form">
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" id="email" placeholder="Email cadastrado" />
                        </div>
                        <div class="form-group">
                            <input type="password" name="senha" id="senha" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group pt-3">
                            <input type="submit" id="enviar" value="Entrar" class="col-12 btn btn-primary" />
                        </div>
                    </form>

                    <div class="d-flex justify-content-between">
                        <a href="/cliente/novo" class="card-link">Novo por aqui?</a>
                        <a href="" class="card-link">Esqueceu a senha?</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
        <%- include('../includes/scripts.ejs') %>


</body>
<script>
    $(document).ready(function () {
        $("#menu_cliente").attr("class", "active");
    });
</script>

</html>